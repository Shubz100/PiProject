// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {

  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  telegramId     String?  @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  username   String?
  firstName  String?
  lastName   String?
}
